            <div class="d-flex justify-content-end align-items-center row social">
              <% if (header.contacts_stripe.socials) { %>
                <% networks.forEach(network => { %>
                  <% if (contacts[network]) { %>
                    <a href="<%= contacts[network] %>" target="_blank" rel="noopener">
                      <i class="fab fa-<%= network %>"></i>
                    </a>
                  <% } %>
                <% }) %>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>  
</footer>
